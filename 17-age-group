public String ageGroup(Integer n) {
        if (n == null || n < 0) {
            return 'Invalid age';
        } else if (n <= 1) {
            return 'Infant';
        } else if (n >= 2 && n <= 14) {
            return 'Child';
        } else if (n >= 15 && n <= 21) {
            return 'Youth';
        } else if (n >= 22) {
            return 'Adult';
        } else {
            return 'Unknown';
        }
    }
}
